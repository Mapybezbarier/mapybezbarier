{define tabObject}
    <div class="form_wrapper common_info_form">
        <div class="form_inner">
            <div class="form_block accessibility">
                <h3>Přístupné pro vozíčkáře</h3>
                {include radioGroup, form => $form, name => 'accessibility'}

                <h3>Přístupnost pro důchodce</h3>
                {include radioGroup, form => $form, name => 'accessibilityPram'}

                <h3>Přístupnost pro rodiče s kočárkem</h3>
                {include radioGroup, form => $form, name => 'accessibilityPensioners'}
            </div>
            <div class="form_block">
                {include inputText, form => $form, name => 'title'}
                {include tabObjectParent, form => $form}

                {include inputText, form => $form, name => 'organizationName'}
                {include inputText, form => $form, name => 'mappingDate'}
            </div>
            <div class="form_block">
                {include inputText, form => $form, name => 'region'}
                {include tabObjectAddress, form => $form}
            </div>
            <div class="form_block">
                {include radioGroup, form => $form, name => 'objectType', label => true}
                {include inputText, form => $form, name => 'objectTypeCustom', class => 'other'}
            </div>
            <div class="form_block">
                {include tabObjectImage, form => $form}
                {include inputText, form => $form, name => 'description', class => 'textarea description'}
            </div>
            <div class="form_block">
                {include inputText, form => $form, name => 'webUrl'}
                {include inputText, form => $form, name => 'dataOwnerUrl'}
            </div>
            <div n:if="$user->isInRole(\MP\Module\Admin\Service\Authorizator::ROLE_MASTER) || $user->isInRole(\MP\Module\Admin\Service\Authorizator::ROLE_ADMIN)"
                 class="form_block" >
                {include inputText, form => $form, name => 'certified'}
            </div>
        </div>
    </div>
{/define}

{define tabObjectImage}{/define}

{define tabObjectParent}
    {include inputText, form => $form, name => 'parentObjectId'}
{/define}

{define tabObjectAddress}
    {include tabCityBlock form => $form}
    {include tabStreetBlock form => $form}
    {include tabHouseNumberBlock form => $form}
    {include tabGPSBlock form => $form}

    {if $hasAddress}
        {include objectAddressChange}
    {/if}

    {include objectAddressMap}

    {include inputText, form => $form, name => 'ruianAddress', class => 'hidden'}
{/define}

{define tabCityBlock}
    {include inputText, form => $form, name => 'zipcode'}
    {include inputText, form => $form, name => 'city'}
    {include inputText, form => $form, name => 'cityPart'}
{/define}

{define tabStreetBlock}
    {include inputText, form => $form, name => 'street'}
{/define}

{define tabHouseNumberBlock}
    {include inputText, form => $form, name => 'streetDescNo'}
    {include inputText, form => $form, name => 'streetOrientNo'}
    {include inputText, form => $form, name => 'streetOrientSymbol'}
    {include inputText, form => $form, name => 'streetNoIsAlternative', class => 'hidden'}
{/define}

{define tabGPSBlock}
    {include inputText, form => $form, name => 'latitude'}
    {include inputText, form => $form, name => 'longitude'}
{/define}

{define objectAddressChange}{/define}
{define objectAddressMap}{/define}
