                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.surface}</label>
                    </td>
                    <td colspan="2">
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampSurface"}
                    </td>
                </tr>
                <tr>
                    <td colspan="2" rowspan="2">
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampIsHandle", label => TRUE}
                    </td>
                    <td>
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampHandleOrientation"}
                    </td>
                </tr>
                <tr>
                    <td>
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampHandle1Height", class => 'short measure_unit'}
                    </td>
                </tr>

                {* Ližiny *}
                <tr>
                    <th rowspan="4">
                        <label>{_backend.control.object.label.rampskids.skids}</label>
                    </th>
                    <td colspan="3">
