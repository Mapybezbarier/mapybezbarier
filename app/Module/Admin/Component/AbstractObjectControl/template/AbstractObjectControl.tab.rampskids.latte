                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg2Length", class => 'short measure_unit'}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.leg3}</label>
                    </td>
                    <td colspan="2">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg3Inclination", class => 'short percent'}
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg3Width", class => 'short measure_unit'}
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg3Length", class => 'short measure_unit'}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.leg4}</label>
                    </td>
                    <td colspan="2">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg4Inclination", class => 'short percent'}
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg4Width", class => 'short measure_unit'}
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg4Length", class => 'short measure_unit'}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.bottomEntryArea}</label>
