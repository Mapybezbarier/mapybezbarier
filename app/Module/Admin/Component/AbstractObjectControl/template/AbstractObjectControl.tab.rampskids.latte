{define tabRampskids}
    <div class="table_responsive_wrapper">
        <fieldset class="formee">
            <table>
                <tr>
                    <th><label>{_backend.control.object.label.rampskids.rampRelation}</label></th>
                    <td colspan="3">
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampRelation"}
                    </td>
                </tr>

                {* Rampa *}
                <tr>
                    <th rowspan="15">
                        <label>{_backend.control.object.label.rampskids.ramp}</label>
                    </th>
                    <td colspan="3">
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampLocalization"}
                    </td>
                </tr>

                <tr>
                    <td colspan="3">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampInteriorLocalization"}
                    </td>
                </tr>
                <tr>
                    <td>
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampMobility"}
                    </td>
                    <td colspan="2">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampAccessProvidedBy"}
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        {include radioGroup, form => $form, attachement => $attachement, index => $index, name => "rampType"}
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampNumberOfLegs", class => 'short'}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.leg1}</label>
                    </td>
                    <td colspan="2">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg1Inclination", class => 'short percent'}
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg1Width", class => 'short measure_unit'}
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg1Length", class => 'short measure_unit'}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.leg2}</label>
                    </td>
                    <td colspan="2">
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampleg2Inclination", class => 'short percent'}
