                    <td>
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampBottomEntryareaDepth", class => 'short measure_unit'}
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>{_backend.control.object.label.rampskids.topEntryArea}</label>
                    </td>
                    <td>
                        {include inputText, form => $form, attachement => $attachement, index => $index, name => "rampTopEntryareaWidth", class => 'short measure_unit'}
